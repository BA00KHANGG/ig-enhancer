{
    "manifest_version": 3,
    "name": "IG Enhancer",
    "version": "1.0",
    "description": "Hide comments, scroll navigation, and auto screen detection for Instagram.",
    "permissions": ["activeTab", "storage", "tabs"],
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icons/icon-disabled.png",
        "48": "icons/icon-disabled.png",
        "128": "icons/icon-disabled.png"
      },
      "default_title": "IG Enhancer Settings"
    },
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [
      {
        "matches": ["*://*.instagram.com/*"],
        "js": ["contentScript.js"],
        "run_at": "document_end",
        "all_frames": false
      }
    ],
    "icons": {
      "16": "icons/icon-disabled.png",
      "48": "icons/icon-disabled.png",
      "128": "icons/icon-disabled.png"
    },
    "commands": {
      "toggle-auto-detection": {
        "suggested_key": {
          "default": "Alt+A",
          "mac": "Alt+A"
        },
        "description": "Toggle Auto Screen Detection"
      },
      "toggle-hide-comments": {
        "suggested_key": {
          "default": "Alt+H",
          "mac": "Alt+H"
        },
        "description": "Toggle Hide Comments"
      },
      "toggle-scroll-navigation": {
        "suggested_key": {
          "default": "Alt+S",
          "mac": "Alt+S"
        },
        "description": "Toggle Scroll Navigation"
      }
    }
  }