{
    "manifest_version": 3,
    "name": "Hide Instagram Comments",
    "version": "1.0",
    "description": "Automatically hides comments section on Instagram video pages.",
    "permissions": ["activeTab", "storage", "tabs"],
    "action": {
      "default_icon": {
        "48": "icon-disabled.png"
      },
      "default_title": "Toggle Comments"
    },
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [
      {
        "matches": ["*://*.instagram.com/*"],
        "js": ["contentScript.js"],
        "run_at": "document_end"
      }
    ],
    "icons": {
      "48": "icon-disabled.png"
    }
  }
  